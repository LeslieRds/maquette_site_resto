<div class="container pt-3 mt-3">
  <h1 class="w-100 text-center pb-3 title-index">
    Bienvenue chez Geo Pasta!
  </h1>
    <% @articles.each do |article| %>
      <div class="col">
        <div class="card-product">
          <h2 class="card-product-infos"><%= article.title %></h2>
        </div>
        <button type="button" class="btn-gradient">
        <%= link_to "En savoir plus", article_path(article), class: "text-decoration-none text-black" %>
        </button>
      </div>
    <% end %>
</div>
